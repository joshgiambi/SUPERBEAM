modules = ["nodejs-20", "web", "postgresql-16", "python-3.11", "python3"]
run = "./replit-setup-and-start.sh"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist", "build", "sam_env"]

[nix]
channel = "stable-24_05"
file = "replit.nix"

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]

[[ports]]
localPort = 3000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 3000
